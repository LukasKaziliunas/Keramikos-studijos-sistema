<link href="/static/stylesheets/signin.css" rel="stylesheet">

<body class="text-center">
    
    <main class="form-signin">
      <form method="POST" action="/account/register" enctype="application/x-www-form-urlencoded">
        
        <h1 class="h3 mb-3 fw-normal">Registracijos forma</h1>
    
        <div class="form-floating">
          <input type="text" class="form-control" id="floatingInput" placeholder="vardas" name="name" value="<%if(typeof fields.name != 'undefined'){%><%=fields.name%><%}%>">
          <label for="floatingInput">Vardas</label>
        </div>

        <div class="form-floating">
            <input type="text" class="form-control" id="floatingInput" placeholder="pavardė" name="lastname" value="<%if(typeof fields.lastname != 'undefined'){%><%=fields.lastname%><%}%>">
            <label for="floatingInput">Pavardė</label>
          </div>

          <div class="form-floating">
            <input type="phone" class="form-control" id="floatingInput" placeholder="+370xxxxxxxx" name="phone" value="<%if(typeof fields.phone != 'undefined'){%><%=fields.phone%><%}%>">
            <label for="floatingInput">Telefono numeris</label>
          </div>

          <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="adresas@pvz.com" name="email" value="<%if(typeof fields.email != 'undefined'){%><%=fields.email%><%}%>">
            <label for="floatingInput">El. paštas</label>
          </div>

          <div class="form-floating">
            <input type="password" class="form-control" id="floatingInput" placeholder="min 8 simboliai" name="password">
            <label for="floatingInput">Slaptažodis</label>
          </div>
              
          <div class="form-floating">
            <input type="password" class="form-control" id="floatingInput" placeholder="pakartoti slaptažodį" name="password2">
            <label for="floatingInput">Pakartoti slaptažodį</label>
          </div>
    
        <button class="w-100 btn btn-lg btn-primary" type="submit">Registruotis</button>
      </form>
      <br>
      <% if(typeof errorsList != 'undefined') { %>
        <% errorsList.forEach(function(error) {  %> 
            <div class="alert alert-danger" role="alert">
                <%= error.message %>
              </div>
        <% }) %>
    <% } %>  
    </main>
</body>