<div class="container" style="padding: 0 0 20px 0; margin-left: 10px; margin-right: 10px;" >

    <div class="shadow p-3 mb-5 rounded" style="width: 500px; min-height: 500px;">
        <form method="POST" action="/administration/potteryTypeCreate" encType="multipart/form-data">

            <div class="mb-3 row">
                <label for="name" class="col-sm-3 col-form-label">Pavadinimas</label>
                <div class="col-sm-5">
                  <input type="text" name="name" class="form-control" id="name" value="<% if(typeof fields.name != 'undefined') { %><%=fields.name%><% } %>">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="price" class="col-sm-3 col-form-label">Kaina</label>
                <div class="col-sm-5">
                  <input type="number" name="price" step="0.01" class="form-control" id="price" value="<% if(typeof fields.price != 'undefined') { %><%=fields.price%><% } %>">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">IÅ¡saugoti</button>

        </form><br> 

        <% if(typeof errorsList != 'undefined') { %>
            <% errorsList.forEach(function(error) {  %> 
                <div class="alert alert-danger" role="alert">
                    <%= error.message %>  
                  </div>
            <% }) %>
        <% } %>  
    </div>

</div>