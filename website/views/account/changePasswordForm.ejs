<div class="container" style="padding: 0 0 20px 0; margin-left: 10px; margin-right: 10px;" >

    <div class="shadow p-3 mb-5 rounded" style="width: 500px; min-height: 500px;">
        <form method="POST" action="/account/changePassword" encType="multipart/form-data">

            <div class="mb-3 row">
                <label for="password" class="col-sm-2 col-form-label">Naujas slaptažodis</label>
                <div class="col-sm-5">
                  <input type="password" name="password" class="form-control" id="password" value="<% if(typeof fields.password != 'undefined') { %><%=fields.password%><% } %>">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="password2" class="col-sm-2 col-form-label">Pakartoti slaptažodį</label>
                <div class="col-sm-5">
                  <input type="password" name="password2" class="form-control" id="password2" value="<% if(typeof fields.password2 != 'undefined') { %><%=fields.password2%><% } %>">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Išsaugoti</button>

        </form><br> 
    </div>

</div>