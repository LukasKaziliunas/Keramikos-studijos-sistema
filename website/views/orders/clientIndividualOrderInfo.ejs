<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Namai</a></li>
      <li class="breadcrumb-item"><a href="/orders/userOrders">Mano užsakymai</a></li>
      <li class="breadcrumb-item"><a href="#">Užsakymo informacija</a></li>
    </ol>
  </nav>

<div class="container" style="padding: 20px 0 20px 0; margin-left: 10px; margin-right: 10px;" >

    <div class="shadow p-3 mb-5 bg-body rounded" style="width: 90%;">

        <p>
            <strong>užsakymo id: </strong> <%=orderId%> | <strong>Būsena: </strong> <span <% if (state == 'naujas') { %> style="color: green;" <%} else if (state == 'įvykdytas') { %>style="color: orange;"<% } else if(state == 'atšauktas') { %>style="color: red;"<% } %>><b><%=state%></b></span>
        </p>

        <div class="card mb-3" style="max-width: 1200px;">
            <div class="row g-0 align-items-center" >
            <div class="col-md-4">
                <div class="my-img-container" style="width: 320px; height: 240px">
                    <img src="<%=potteryOrder.photo%>" class="img-responsive" width="320px" height="240px">
                </div>
               
            </div>
            <div class="col-md-8">
                <div class="card-body">
                   <p><strong>Dirbinio tipas:</strong> <%= potteryOrder.potteryType %> </p>
                   <p><strong>Užsisakytas kiekis:</strong> <%= potteryOrder.amount %> </p>
                   <p><strong>Vieneto kaina:</strong> <%= potteryOrder.price %> &euro;</p>
                   <textarea readonly rows="4" cols="80"><%=potteryOrder.comment%></textarea>
                </div>
            </div>
            
            </div>
        </div>

        <% if(state == 'atšauktas') { %> 
            <div class="alert alert-danger" role="alert">
                Užsakymas yra atšauktas.
              </div>  
        <% }else{ %> 
            <% if(paymentMade == 0 && state == 'patvirtintas') { %>
                <div class="row">
                    <div class="col-10"></div>
                    <div class="col-2">
                        <a href="/orders/paymentSelectionForm?orderId=<%=orderId%>"><button type="button" class="btn btn-success">Atlikti mokėjimą</button></a>
                    </div>
                </div>
                
            <% }else if(paymentMade == 1){ %> 
                <div class="alert alert-info" role="alert">
                    Mokėjimas yra užregistuotas
                  </div>
            <% }else{ %>
                <div class="alert alert-info" role="alert">
                    Laukiama patvirtinimo. Užsakymą patvirtinus galėsite atlikti mokėjimą.
                  </div>    
            <% } %> 
        <% } %> 
        

    </div>
</div>